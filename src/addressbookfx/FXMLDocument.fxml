                     </padding>
                  </VBox>
               </content>
          </Tab>
          <Tab fx:id="tabBrowseAddress" onSelectionChanged="#handleBrowseTab" text="Browse adresses">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="lstFullName" onMouseClicked="#handleListView" prefHeight="200.0" prefWidth="200.0" />
                        <TextArea fx:id="txtInfoArea" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </HBox>
               </content>
          </Tab>
        </tabs>
      </TabPane>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleCloseButton" text="Close">
